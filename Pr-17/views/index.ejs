<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Panel - Tuition Class</title>
  <style>
    body {
      font-family: 'Segoe UI', Arial, sans-serif;
      background: #f6f7fb;
      margin: 0;
    }

    .container {
      max-width: 700px;
      margin: 40px auto;
      background: #fff;
      border-radius: 12px;
      box-shadow: 0 8px 32px rgba(102, 166, 255, 0.12);
      padding: 32px;
    }

    h1 {
      color: #66a6ff;
      text-align: center;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 24px;
    }

    th,
    td {
      padding: 10px;
      border-bottom: 1px solid #eee;
      text-align: left;
    }

    th {
      background: #eaf4ff;
    }

    tr:last-child td {
      border-bottom: none;
    }

    .actions a,
    .actions form {
      display: inline-block;
      margin-right: 8px;
    }

    .actions button {
      background: #66a6ff;
      color: #fff;
      border: none;
      border-radius: 6px;
      padding: 6px 14px;
      cursor: pointer;
      transition: background 0.2s;
    }

    .actions button:hover {
      background: #89f7fe;
      color: #333;
    }

    .add-form {
      margin-top: 32px;
    }

    .add-form input {
      padding: 8px;
      border-radius: 6px;
      border: 1px solid #66a6ff;
      margin-right: 8px;
    }

    .add-form button {
      background: #66a6ff;
      color: #fff;
      border: none;
      border-radius: 6px;
      padding: 8px 18px;
      cursor: pointer;
      transition: background 0.2s;
    }

    .add-form button:hover {
      background: #89f7fe;
      color: #333;
    }
  </style>
</head>

<body>
  <div class="container">
    <h1>Admin Panel - Tuition Class</h1>
    <div
      style="text-align: center; margin-bottom: 20px; padding: 10px; background: <%= dbType === 'MongoDB' ? '#d4edda' : '#fff3cd' %>; border-radius: 8px; border: 1px solid <%= dbType === 'MongoDB' ? '#c3e6cb' : '#ffeaa7' %>;">
      <strong>Database: <%= dbStatus %></strong>
      <% if (dbType !=='MongoDB' ) { %>
        <br><small>ðŸ’¡ <a href="#"
            onclick="alert('To enable MongoDB:\\n1. Install MongoDB locally, OR\\n2. Use MongoDB Atlas (cloud)\\n3. Update MONGODB_URI in server.js')">Click
            here for MongoDB setup guide</a></small>
        <% } %>
    </div>
    <table>
      <tr>
        <th>Name</th>
        <th>Roll No</th>
        <th>Class</th>
        <th>Actions</th>
      </tr>
      <% students.forEach(function(student) { %>
        <tr>
          <td>
            <%= student.name %>
          </td>
          <td>
            <%= student.rollNo %>
          </td>
          <td>
            <%= student.className %>
          </td>
          <td class="actions">
            <a href="/edit/<%= student._id %>"><button>Edit</button></a>
            <form action="/delete/<%= student._id %>" method="POST" style="display:inline;">
              <button type="submit">Delete</button>
            </form>
          </td>
        </tr>
        <% }) %>
    </table>
    <form class="add-form" action="/add" method="POST">
      <input type="text" name="name" placeholder="Name" required>
      <input type="text" name="rollNo" placeholder="Roll No" required>
      <input type="text" name="className" placeholder="Class" required>
      <button type="submit">Add Student</button>
    </form>
  </div>
</body>

</html>